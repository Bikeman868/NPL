using npl.connection
namespace app {
    message Response {
        string text
    }

    network Hello {
        ingress egress default {
            process Responder
        }

        ingress egress Http {
            pipe Router
        }

        process Responder {
            accept * { // Accept all message types
                emit Response { 
                    data { text 'Hello, world' }
                }
            }
        }
    }
}
